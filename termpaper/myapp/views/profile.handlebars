<div class="container">

	<h1 id="user" class="text-center">Добро пожаловать в систему {{login}}</h1>
	<form id="imgUserForm" action="" method="" enctype  = "">
		<p class="text-center"><img id="imgUser" src="../img/bg.jpg" alt={{login}} class="img-thumbnail"></p>
		<p class="text-center" ><input type="file" id="realFile" name="photo">
		<button type="submit" id="imgButton" class="btn btn-primary">Сменить фото</button></p>
	</form>


	<form id="profileForm" action="" method=""> 
		<div class="clearfix margin">
			<div class="left">
				<label for="username">Имя:</label>
				<input type="text" id="username" name="username" placeholder="Введите имя">
			</div>
			<div class="right">
			<button name="btnChange" class="btn btn-divght" type="button">Изменить</button>
			</div>
		</div>
		<div class="clearfix margin">
			<div class="left">
				<label for="surname">Фамилия:</label>
				<input type="text" id="surname" name="surname" placeholder="Введите фамилию">
			</div>
			<div class="right">
			<button name="btnChange" class="btn btn-divght" type="button">Изменить</button>
			</div>
		</div>
		<div class="clearfix margin">
			<div class="left">
				<label for="forename">Отчество:</label>
				<input type="text" id="forename" name="forename" placeholder="Введите oтчество">
			</div>
			<div class="right">
				<button name="btnChange" class="btn btn-divght" type="button">Изменить</button>
			</div>
		</div>
		<div class="clearfix margin">
			<div class="left">
				<label for="position">Должность:</label>
				<input type="text" id="position" name="position" placeholder="Введите должность">
			</div>
			<div class="right">
			<button name="btnChange" class="btn btn-divght" type="button">Изменить</button>
			</div>
		</div>
		<div class="clearfix margin">
			<div class="left">
				<label for="phone">Teлефон:</label>
				<input type="text" id="phone" name="phone" placeholder="Введите телефон">
			</div>
			<div class="right">
			<button name="btnChange" class="btn btn-divght" type="button">Изменить</button>
			</div>
		</div>
	</form>
	<p id='user'></p>
</div>
<script type="text/javascript" src="../js/profile.js"></script>